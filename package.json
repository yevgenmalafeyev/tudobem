{
  "name": "tudobem",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:prod": "playwright test --config=playwright.config.production.ts",
    "test:e2e:prod:ui": "playwright test --config=playwright.config.production.ts --ui",
    "test:smoke": "playwright test tests/e2e/production-smoke.spec.ts --config=playwright.config.production.ts",
    "test:levels": "playwright test tests/e2e/level-filtering.spec.ts",
    "test:levels:prod": "playwright test tests/e2e/production-level-filtering.spec.ts --config=playwright.config.production.ts",
    "test:performance": "playwright test --config=playwright.performance.config.ts",
    "test:performance:ui": "playwright test --config=playwright.performance.config.ts --ui",
    "test:performance:core": "playwright test tests/performance/core-web-vitals.spec.ts --config=playwright.performance.config.ts",
    "test:performance:load": "playwright test tests/performance/load-testing.spec.ts --config=playwright.performance.config.ts",
    "test:enhanced": "jest tests/integration/enhanced-exercise-system.test.ts",
    "db:init": "npx tsx src/scripts/initializeDatabase.ts",
    "db:migrate": "npx tsx src/scripts/migrateStaticExercises.ts migrate",
    "db:validate": "npx tsx src/scripts/migrateStaticExercises.ts validate",
    "db:rollback": "npx tsx src/scripts/migrateStaticExercises.ts rollback",
    "db:setup": "npm run db:init && npm run db:migrate && npm run db:validate",
    "enhanced:setup": "npm run db:setup",
    "enhanced:test": "npm run test:enhanced"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@types/pg": "^8.15.4",
    "@vercel/postgres": "^0.10.0",
    "jszip": "^3.10.1",
    "next": "15.4.1",
    "next-pwa": "^5.6.0",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "msw": "^2.10.4",
    "playwright": "^1.54.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20"
  }
}
